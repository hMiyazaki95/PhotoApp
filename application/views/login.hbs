<form id="login-form" method="POST" action="/users/login" enctype="application/x-www-form-urlencoded"> 
  <h1>Login</h1>
  <div class="img_container" id="overlay">
    <!-- icon is in the public folder-->
    <img src="/public/icons8-user.gif" alt="showing image" /> 
  </div>

  <div class="container">
    <label for="username">
    <b>Username</b>
    </label>
    <input 
    	type="text" 
        placeholder="Enter Username" required name="username">

    <label for="password"> <b>Password</b>  </label>
    <input type="password" placeholder="Enter Password" 
    required name="password">
        
    <button type="submit">Submit</button>
    <button type="reset" class="reset_btn"
    >Reset</button>
